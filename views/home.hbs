  <div id="deleteContainer">
    <div>
      <svg>
        <use href="#warning" />
      </svg>
      <h2>Tem certeza que deseja deletar esse item?</h2>

      <span id="itemToDel"></span>

      <div>
        <button id="cancelDelete">Cancelar</button>
        <button class="confirm" id="confirmDelete">Deletar</button>
      </div>
    </div>
  </div>

  <div id="renameContainer">
    <div>
      <h2>Renomear</h2>
      <input type="text" id="rename" />

      <div>
        <button id="cancelRename">Cancelar</button>
        <button class="confirm" id="confirmRename">Renomear</button>
      </div>
    </div>
  </div>

  <div id="nameContainer">
    <div>
      <h2>Nome do Ponto</h2>
      <input type="text" id="name" />

      <div>
        <button id="cancelName">Cancelar</button>
        <button class="confirm" id="confirmName">Iniciar</button>
      </div>
    </div>
  </div>

  <div id="alertContainer">
    <div>
      <svg>
        <use href="#warning" />
      </svg>
      <h2>Se continuar, a gravação do ponto irá parar e salvar imediatamente,
        deseja continuar?</h2>

      <div>
        <button id="cancel">Cancelar</button>
        <button class="confirm" id="continue">Continuar</button>
      </div>
    </div>
  </div>

  <div id="gpsdContainer">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 512 512"
    ><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path
        d="M233 7c-9.4-9.4-24.6-9.4-33.9 0l-96 96c-9.4 9.4-9.4 24.6 0 33.9l89.4 89.4-15.5 15.5C152.3 230.4 124.9 224 96 224c-31.7 0-61.5 7.7-87.8 21.2c-9 4.7-10.3 16.7-3.1 23.8L112.7 376.7 96.3 393.1c-2.6-.7-5.4-1.1-8.3-1.1c-17.7 0-32 14.3-32 32s14.3 32 32 32s32-14.3 32-32c0-2.9-.4-5.6-1.1-8.3l16.4-16.4L242.9 506.9c7.2 7.2 19.2 5.9 23.8-3.1C280.3 477.5 288 447.7 288 416c0-28.9-6.4-56.3-17.8-80.9l15.5-15.5L375 409c9.4 9.4 24.6 9.4 33.9 0l96-96c9.4-9.4 9.4-24.6 0-33.9l-89.4-89.4 55-55c12.5-12.5 12.5-32.8 0-45.3l-48-48c-12.5-12.5-32.8-12.5-45.3 0l-55 55L233 7zm159 351l-72.4-72.4 62.1-62.1L454.1 296 392 358.1zM226.3 192.4L153.9 120 216 57.9l72.4 72.4-62.1 62.1z"
      />
    <span id="log">Buscando...</span>
  </div>

  <div id="recordContainer">
    <button id="btnRecord">
      <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30">
        <use id="icon" href="#playIcon" />
      </svg>
      <span id="label">GRAVAR</span>
    </button>
  </div>

  <div id="tableContainer">
    <button id="genZip">Gerar ZIP</button>
    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Tamanho</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        {{#if files}}
          {{#each files}}
            <tr data-name="{{this.name}}">
              <td>
                {{#if (isZip this.name)}}
                  <svg class="zipFile" xmlns="http://www.w3.org/2000/svg">
                    <use href="#zipFile" />
                  </svg>
                {{/if}}
                {{this.name}}
              </td>
              <td class="size">{{this.size}}</td>
              <td>
                <div>
                  <button class="btnDownload">
                    <svg xmlns="http://www.w3.org/2000/svg">
                      <use href="#downloadIcon" />
                    </svg>
                  </button>
                  <button class="btnRename">
                    <svg xmlns="http://www.w3.org/2000/svg">
                      <use href="#pencilIcon" />
                    </svg>
                  </button>
                  <button class="btnDelete">
                    <svg xmlns="http://www.w3.org/2000/svg">
                      <use href="#trashIcon" />
                    </svg>
                  </button>
                </div>
              </td>
            </tr>
          {{/each}}
        {{else}}
          <tr>
            <td colspan="3">Sem Registros</td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
</section>