  <script>
    const BACK_URL = "http://{{ip}}";
    const messagesContainer = document.querySelector(".flashMessage");

    const addMessage = (msg, error = false) => {
      const span = document.createElement("span");
      if(error) {
        span.classList.add("error");
      }

      span.innerText = msg;

      span.addEventListener("animationend", (e) => {
        if(e.animationName === "hideMsg") span.remove()
      })
      messagesContainer.appendChild(span)
    }
  </script>
